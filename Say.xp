import static util.cmd.Console.*;

/**
 * Say
 *
 */
public class Say {
  protected string $greeting = 'Hello';

  /**
   * Greet
   *
   */
  public void hello(string? $name) {
    writeLine($this.greeting, ' ', $name);
  }

  /**
   * Entry point
   *
   */
  public static void main(string[] $args) {
    new self().hello($args[0]);
  }
}
